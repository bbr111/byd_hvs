    "version": "0.2.0",
    "configurations": [
        {
            "name": "Home Assistant",
            "type": "debugpy",
            "request": "launch",
            "module": "homeassistant",
            "justMyCode": false,
            "args": [
                "--debug",
                "-c",
                "config"
            ],
            "env": {
                "PYTHONASYNCIODEBUG": "1",
                "PYTHONUNBUFFERED": "1",
                "TZ": "Europe/Berlin",
                "HASS_FRONTEND_RELOAD": "1"
            },
            "preLaunchTask": "scripts/develop"
        },
    ]
}